*,
*::after,
*::before
    box-sizing border-box

h1, h2, h3, h4, h5, h6, ul
    margin 0
    padding 0

body, html
    padding 0
    margin 0
    height 100%
    width 100%
    overflow-y scroll

html
    overflow-y auto

img
    max-width 100%
    height auto

body
    position relative
    color #000
    overflow-y scroll

#wrap
    font-size calc(100vw/20)

    +md-block()
        font-size calc(100vw/48)

    +lg-block()
        font-size calc(100vw/120)

.wrap
    color #fff
    overflow hidden
    font-family Arial, Helvetica, sans-serif
    position relative
    max-width 1220px
    margin 0 auto
    display block
    background rgba(18, 18, 21, 0.7)
    padding 0 15px
    box-shadow 0 0 5px #000
    min-height 100%