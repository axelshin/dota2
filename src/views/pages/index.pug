extends ../layouts/default

block variables
	- const title = "dota2"

block content
	include ../../blocks/components/list/list

block scripts
	script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.0/gsap.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/ScrollTrigger.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.3.4/ScrollToPlugin.min.js")
	script(src="./js/main.js")
	script.
		$(document).ready(function(ev) {
			$('a[href^="#scrollto"]').bind('click.smoothscroll',function (e) {
				var target = this.hash,
					$target = $(target);
			
				$('html, body').stop().animate( {
					'scrollTop': $target.offset().top - 200
				}, 900, 'swing', function () {
					window.location.hash = target;
				} );
			});
		});
